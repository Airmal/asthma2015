<div id="page-container" class="wrapper">
  <div class="page-canvas">
    <div class="signup-wrapper">

    <h2>找回密码</h2>
    
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: {id: 'signup-form', method: :post, class: 'normal-form', onsubmit: 'return devise_signup.validateForm()' }) do |f| %>
     <%= devise_error_messages! %>

      <div class="field">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, class: 'form-control' %>
      </div>
      <hr>
      <div class="actions">
        <%= f.submit "发送邮件", class: 'btn btn-primary' %>
      </div>
      <% end %>
    </div>
    <div class="clearfix underline">
      <p class="signup-helper">
        首次使用云医（YunMed）？
        <%= link_to new_registration_path(resource_name) do %>
          立即注册 <i class="glyphicon glyphicon-chevron-right"></i>
        <% end -%>
      </p>
      <p class="signin-helper">
        已有账号？
        <%= link_to session_path(resource_name) do %>
          立即登录 <i class="glyphicon glyphicon-chevron-right"></i>
        <% end -%>
      </p>
    </div>
  </div>
</div>