<div id="page-container" class="wrapper">
  <div class="page-canvas">
    <div class="signup-wrapper">
    
    <h2>变更密码</h2>
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: {id: 'signup-form', method: :put, onsubmit: 'return devise_signup.validateForm()' }) do |f| %>
     <%= devise_error_messages! %>
     <%= f.hidden_field :reset_password_token %>

     <div class="form-group">
      <%= f.label :password, "新密码" %><br />
       <%= f.password_field :password, autofocus: true, autocomplete: "off", class: 'form-control' %>
     </div>

     <div class="form-group">
       <%= f.label :password_confirmation, "确认新密码" %><br />
       <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control' %>
     </div>
     <hr>
     <div class="actions">
       <%= f.submit "变更密码", class: 'btn btn-primary' %>
     </div>
    <% end %>
   </div>
  </div>
</div>
